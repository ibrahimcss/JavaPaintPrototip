    private void jComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        if(jComboBox1.getSelectedIndex()==0) myCanvas2.secilen=0;
        if(jComboBox1.getSelectedIndex()==1) myCanvas2.secilen=1;
        if(jComboBox1.getSelectedIndex()==2) myCanvas2.secilen=3;
        if(jComboBox1.getSelectedIndex()==3) myCanvas2.secilen=2;
        if(jComboBox1.getSelectedIndex()==5) myCanvas2.secilen=4;
        if(jComboBox1.getSelectedIndex()==4) myCanvas2.secilen=5;
        if(jComboBox1.getSelectedIndex()==6) myCanvas2.secilen=6;
                if(jComboBox1.getSelectedIndex()==7) myCanvas2.secilen=7;


    }                                          

